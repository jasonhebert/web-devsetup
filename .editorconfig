# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.php]
indent_style = space
indent_size = 4

[**.js]
indent_style = space
indent_size = 4

# Tabs in less
[**.less]
indent_style = tab
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2

[**.html]
indent_style = tab
indent_size = 2

[*.bat]
end_of_line = crlf

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[**.sh]
indent_style = space
indent_size = 4
